system System

instance variables
  
	public static wt3_controller : [Controller] := nil;
  
	wt3_sensor : LevelSensor;
	wt3_valve  : ValveActuator;
	
	cpu : CPU := new CPU(<FP>, 20);

operations

public System : () ==> System
System () == (

	wt3_sensor   := new LevelSensor();
	wt3_valve := new ValveActuator();
	
	wt3_controller := new Controller(World`wt3_max, World`wt3_min, wt3_sensor, wt3_valve);
	cpu.deploy(wt3_controller);

);

end System
